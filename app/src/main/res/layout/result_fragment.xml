<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".result">

    <View
        android:id="@+id/view4"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/linear_gradiant_background" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvStories"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="right|center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="@color/blue"
        app:cardCornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivStory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_baseline_person_24"
            android:scaleType="centerCrop"
            tools:background="@drawable/ic_baseline_person_24" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/result_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="35dp"
        android:text="Hello User"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="70dp"
        android:text="Date:"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Sgpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="105dp"
        android:text="SGPA:"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Cgpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="140dp"
        android:text="CGPA:"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Semester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="180dp"
        android:text="Semester"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="190dp"
        android:text="Previous"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="190dp"
        android:layout_marginRight="30dp"
        android:background="@color/teal_700"
        android:onClick="next_sem_result"
        android:text="Next"
        android:textColor="#FFFFFF"
        tools:ignore="TextContrastCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:addStatesFromChildren="false"
        android:background="@drawable/round_corner_image"
        android:orientation="vertical">

        <ListView
            android:id="@+id/result_list"
            android:layout_width="match_parent"
            android:layout_height="435dp"
            android:layout_margin="10dp"
            android:layout_marginBottom="20dp" />
    </LinearLayout>
</FrameLayout>