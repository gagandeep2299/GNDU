<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/exam_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/examination_background"
    tools:context=".ui.examination">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/examination_data">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ListView
                        android:id="@+id/examListview"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:color="@color/white"
                        android:fontFamily="cursive">

                    </ListView>

                    <ListView
                        android:id="@+id/examListview1"
                        android:layout_width="98dp"
                        android:layout_height="match_parent"
                        android:fontFamily="cursive" />

                    <ListView
                        android:id="@+id/subjectName"
                        android:layout_width="match_parent"
                        android:layout_height="635dp"
                        android:fontFamily="cursive" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:fontFamily="casual"
                    android:gravity="center|fill"
                    android:text="All the best"
                    android:textColor="@color/orange_light"
                    android:textSize="34dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>